{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "allowJs": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*.ts"]
}
